{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "eslint comma-dangle": ["error", "never"],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "renderComment",
          "generateMarkUp",
          "clear",
          "addHandlerRender",
          "renderCloseBtn"
        ]
      }
    ],
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ],
    "linebreak-style": ["error", "windows"]
  },
  "ignorePatterns": ["dist/", "build/"]
}
